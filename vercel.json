{
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "devCommand": "cd frontend && npm run dev",
  "installCommand": "cd frontend && npm install",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://trademind-production.up.railway.app/api/:path*"
    }
  ],
  "env": {
    "VITE_API_URL": "https://trademind-production.up.railway.app"
  }
}

